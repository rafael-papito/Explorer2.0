{
  "compilerOptions": {
    "target": "es2016",                            
    "lib": ["dom", "dom.iterable", "esnext"],                               
    "jsx": "react-jsx",                          
    "moduleResolution": "node",       
    "resolveJsonModule":true,     
    "isolatedModules": true,   
    "allowJs": true,                        
    "noEmit": true,                            
    "esModuleInterop": true,                       
    "forceConsistentCasingInFileNames": true,      
    "strict": true,                                
    "skipLibCheck": true,                   
    "allowSyntheticDefaultImports": true,                  
  },
  "include": ["src"]
}